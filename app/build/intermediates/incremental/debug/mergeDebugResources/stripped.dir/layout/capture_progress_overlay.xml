<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:visibility="gone">

    <!-- Center Loading Indicator -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/loading_background"
        android:padding="32dp">

        <ProgressBar
            android:id="@+id/captureProgressBar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:indeterminateTint="@color/primary"
            android:indeterminateTintMode="src_atop" />

        <TextView
            android:id="@+id/captureProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Processing..."
            android:textColor="@color/on_surface"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/captureProgressSubtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Please hold still"
            android:textColor="@color/on_surface_variant"
            android:textSize="14sp"
            android:alpha="0.8" />

    </LinearLayout>

    <!-- Recording Progress Bar (Top) -->
    <LinearLayout
        android:id="@+id/recordingProgressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/recordingProgressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:progressTint="@color/primary"
            android:progressBackgroundTint="@color/surface_variant"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/recordingTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="00:00"
            android:textColor="@color/primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:background="@drawable/loading_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp" />

    </LinearLayout>

</FrameLayout>