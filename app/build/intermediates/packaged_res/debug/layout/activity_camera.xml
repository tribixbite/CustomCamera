<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top Controls (Samsung/Google Style) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/flashButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/enhanced_button_background"
            android:src="@drawable/ic_flash_off"
            android:scaleType="centerInside"
            android:padding="16dp"
            android:contentDescription="@string/toggle_flash"
            android:importantForAccessibility="yes"
            android:stateListAnimator="@animator/button_press_scale" />

        <ImageButton
            android:id="@+id/nightModeButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/camera_control_background"
            android:src="@drawable/ic_settings"
            android:scaleType="centerInside"
            android:padding="16dp"
            android:alpha="0.6"
            android:contentDescription="Night Mode"
            android:importantForAccessibility="yes" />

        <ImageButton
            android:id="@+id/videoRecordButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/camera_control_background"
            android:src="@drawable/ic_videocam"
            android:scaleType="centerInside"
            android:padding="16dp"
            android:contentDescription="Record Video" />

        <ImageButton
            android:id="@+id/pipButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/camera_control_background"
            android:src="@drawable/ic_pip"
            android:scaleType="centerInside"
            android:padding="16dp"
            android:alpha="0.6"
            android:contentDescription="Picture in Picture" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/camera_control_background"
            android:src="@drawable/ic_settings"
            android:scaleType="centerInside"
            android:padding="16dp"
            android:contentDescription="@string/camera_settings" />

    </LinearLayout>

    <!-- Plugin Controls Panel (right side) -->
    <LinearLayout
        android:id="@+id/pluginControlsPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/gridToggleButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/camera_control_background"
            android:src="@drawable/ic_extension"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:alpha="0.7"
            android:contentDescription="Toggle Grid Overlay" />

        <ImageButton
            android:id="@+id/barcodeToggleButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/camera_control_background"
            android:src="@drawable/ic_focus"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:alpha="0.7"
            android:contentDescription="Toggle Barcode Scanning" />

        <ImageButton
            android:id="@+id/manualControlsToggleButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/camera_control_background"
            android:src="@drawable/ic_settings"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:alpha="0.7"
            android:contentDescription="Toggle Manual Controls" />

    </LinearLayout>

    <!-- Bottom Controls (SOTA Modern Design) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="48dp"
        android:layout_marginHorizontal="32dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Gallery Button -->
        <ImageButton
            android:id="@+id/galleryButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/camera_control_background"
            android:src="@drawable/ic_gallery"
            android:scaleType="centerInside"
            android:padding="18dp"
            android:contentDescription="@string/open_gallery" />

        <!-- Main Capture Button (Large, Center) -->
        <ImageButton
            android:id="@+id/captureButton"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/enhanced_capture_button"
            android:src="@drawable/ic_camera"
            android:scaleType="centerInside"
            android:contentDescription="@string/capture_photo"
            android:elevation="8dp"
            android:stateListAnimator="@animator/capture_button_press" />

        <!-- Switch Camera Button -->
        <ImageButton
            android:id="@+id/switchCameraButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/camera_control_background"
            android:src="@drawable/ic_switch_camera"
            android:scaleType="centerInside"
            android:padding="18dp"
            android:contentDescription="@string/switch_camera" />

    </LinearLayout>

</FrameLayout>